<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Achieve</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
  </head>
  <body>
    <div class="container mt-5" style="max-width: 950px">
      <h1 class="text-center mb-4">Student Absent Data</h1>

      <div class="mb-4 d-flex justify-content-center">
        <form class="form-inline" action="/absent" method="GET">
          <div class="form-group mr-2">
            <label for="date" class="sr-only">Date</label>
            <input
              type="date"
              name="date"
              class="form-control"
              value="<%= search.date %>"
            />
          </div>
          <div class="form-group mr-2">
            <label for="branch" class="sr-only">Branch</label>
            <select name="branch" class="form-control">
              <option value="">All Branches</option>
              <% branches.forEach(branch => { %>
                <option value="<%= branch.branchName %>" <%= search.branch === branch.branchName ? 'selected' : '' %> >
                  <%= branch.branchName %>
                </option>
              <% }); %>
            </select>
          </div>
          <div class="form-group mr-2">
            <label for="batch" class="sr-only">Batch</label>
            <select name="batch" class="form-control">
              <option value="">All Batches</option>
              <% batches.forEach(batch => { %>
                <option value="<%= batch.batchName %>" <%= search.batch === batch.batchName ? 'selected' : '' %> >
                  <%= batch.batchName %>
                </option>
              <% }); %>
            </select>
          </div>
          <button class="btn btn-primary mr-2" type="submit">Search</button>
          <div>
            <a
              href="/export-csv?date=<%= search.date %>&branch=<%= search.branch %>&batch=<%= search.batch %>"
              class="btn btn-success"
              >Export as CSV</a
            >
          </div>
        </form>
      </div>

      <div class="table-responsive text-center" style="max-width: 900px;">
        <table class="table table-bordered table-hover">
          <thead class="thead-light">
            <tr>
              <th>Name</th>
              <th>Roll</th>
              <th>Phone</th>
            </tr>
          </thead>
          <tbody>
            <% students.forEach(student => { %>
            <tr>
              <td><%= student.Name %></td>
              <td><%= student.roll %></td>
              <td><%= student.Phone %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>

      <!-- Pagination Links -->
      <nav class="d-flex justify-content-center mt-4">
        <ul class="pagination flex-wrap">
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="/absent?page=<%= currentPage - 1 %>&date=<%= search.date %>&branch=<%= search.branch %>&batch=<%= search.batch %>">Previous</a>
            </li>
          <% } else { %>
            <li class="page-item disabled">
              <span class="page-link">Previous</span>
            </li>
          <% } %>

          <!-- Page indicator -->
          <li class="page-item disabled">
            <span class="page-link">Page <%= currentPage %> of <%= totalPages %></span>
          </li>

          <% if (currentPage < totalPages) { %>
            <li class="page-item">
              <a class="page-link" href="/absent?page=<%= currentPage + 1 %>&date=<%= search.date %>&branch=<%= search.branch %>&batch=<%= search.batch %>">Next</a>
            </li>
          <% } else { %>
            <li class="page-item disabled">
              <span class="page-link">Next</span>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
